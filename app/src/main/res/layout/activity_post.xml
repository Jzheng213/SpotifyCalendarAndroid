<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <EditText
        android:id="@+id/post_title_id"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Title" />

    <EditText
        android:id="@+id/post_description_id"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp"
        android:hint="Description" />

    <TextView
        android:id="@+id/start_time_title_id"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/post_title_id"
        android:layout_marginTop="137dp"
        android:text="Start" />

    <TextView
        android:id="@+id/start_time_id"
        android:layout_width="340dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/post_title_id"
        android:layout_marginTop="185dp"
        android:text="Tues, 06/06/2018 8:00AM" />

    <TextView
        android:id="@+id/end_time_title_id"
        android:layout_width="89dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/post_title_id"
        android:layout_centerVertical="true"
        android:text="End" />

    <TextView
        android:id="@+id/end_time_id"
        android:layout_width="338dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/post_title_id"
        android:layout_marginBottom="189dp"
        android:text="Tues, 06/06/2018 8:00AM" />

    <Button
        android:id="@+id/add_task"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="23dp"
        android:onClick="submit"
        android:text="Submit" />
</RelativeLayout>