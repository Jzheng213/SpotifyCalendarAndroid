<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_title_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="21dp"
        android:textSize="20dp"
        android:text="Title" />

    <TextView
        android:id="@+id/event_description_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/event_title_id"
        android:layout_below="@+id/event_title_id"
        android:text="something else" />

    <TextView
        android:id="@+id/start_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/event_title_id"
        android:layout_marginStart="23dp"/>

    <TextView
        android:id="@+id/end_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/start_time_id"
        android:layout_alignTop="@+id/event_description_id"/>
</RelativeLayout>